---
batch_connect:
  template: "vnc"
script:
  <%- if instance_size == "40core" -%>
  queue_name: "cpu"
  <%- end -%>
  native:
    <%- if instance_size == "1core" -%>
    - "-J studio_ovito_1core"
    - "-n 1"
    <%- end -%>
    <%- if instance_size == "10core" -%>
    - "-J studio_ovito_10core"
    - "-n 10"
    <%- end -%>
    <%- if instance_size == "20core" -%>
    - "-J studio_ovito_20core"
    - "-n 20"
    <%- end -%>
    <%- if instance_size == "40core" -%>
    - "-J studio_ovito_40core"
    - "--exclusive"
    <%- end -%>
